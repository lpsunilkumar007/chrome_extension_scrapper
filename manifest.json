{
  "name": "Proofread",
  "description": "Hello World.",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/bootstrap.min.css", "css/toastr.min.css"],
      "js": [
        "js/jquery-2.1.1.js",
        "js/popper.js",
        "js/bootstrap.min.js",
        "js/toastr.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*", "http://localhost:52959/api/posturl"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox"
  },
  "action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "default_locale": "en",
  "web_accessible_resources": [
    {
      "resources": ["modal.html", "images/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
